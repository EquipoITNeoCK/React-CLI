{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "lib": ["es2020"],
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "es2022"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
